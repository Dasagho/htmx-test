{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go"

        },
        {
            "name": "Debug Go Tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/handlers/index_test.go",
            "args": ["-test.v"],
            "env": {"GOFLAGS": "-count=1"},
            "showLog": true
        }
    ]
}
